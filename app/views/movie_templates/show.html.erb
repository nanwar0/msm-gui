<h1>
  Movie #<%= @the_movie.id %> details
</h1>

<a href="/movies">
  Go back
</a>

<hr>

<hr>
<form action="/update_movie/<%= @the_movie.id %>" method="post">
  <label for="title_field">Title</label>
  <input id="title_field" type="text" name="title" value = "<%=@the_movie.title%>">
  <br>
  <label for="year_field">Year</label>
  <input id="year_field" type="text" name="year" value = "<%=@the_movie.year%>">
  <br>  
  <label for="duration_field">Duration</label>
  <input id="duration_field" type="text" name="duration" value = "<%=@the_movie.duration%>">
  <br>	
  <label for="description_field">Description</label>
  <input id="description_field" type="text" name="description" value = "<%=@the_movie.description%>">
  <br>
  <label for="image_field">Image</label>
  <input id="image_field" type="text" name="image" value = "<%=@the_movie.image%>">
  <br>
  <label for="director_id_field">Director ID</label>
  <input id="director_id_field" type="text" name="director_id" value = "<%=@the_movie.director_id%>">
  <br>
  <button>Update movie</button>	
</form>

<dl>
  <dt>
    Title
  </dt>
  <dd>
    <%= @the_movie.title %>
  </dd>

  <dt>
    Year
  </dt>
  <dd>
    <%= @the_movie.year %>
  </dd>

  <dt>
    Duration
  </dt>
  <dd>
    <%= @the_movie.duration %>
  </dd>

  <dt>
    Description
  </dt>
  <dd>
    <%= @the_movie.description %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_movie.image %>" style="width:250px;">
  </dd>

  <dt>
    Director
  </dt>
  <dd>
    <% dir_id = @the_movie.director_id %>
    
    <% matching_directors = Director.where({ :id => dir_id }) %>
    
    <% the_director = matching_directors.at(0) %>

    <%= the_director.name %>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @the_movie.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @the_movie.updated_at %>
  </dd>
</dl>

<hr>
